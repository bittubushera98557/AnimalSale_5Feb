            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.PetDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.SoldPets"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.FavouritePets"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
